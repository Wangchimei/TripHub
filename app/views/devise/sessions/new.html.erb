<div class="card devise-box card-bg">
  <div class="card-body">
    <div>
      <%= image_tag "logos/brand_logo_blue.png", class:"form-brand-image"%>
    </div>
    <%= link_to "新規登録", new_registration_path(resource_name), class:"float-right btn btn-outline-primary" %>
    <h5 class="card-title mb-4 mt-1 ml-5 pl-5">ログイン</h5>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'shared/flash_msg'%>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"form-control", placeholder:"メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control text-muted", placeholder: "パスワード" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="custom-control custom-checkbox mt-1">
          <%= f.check_box :remember_me,class:"custom-control-input", id:"checkbox-small"%>
          <%= f.label :remember_me, class:"custom-control-label h7", for:"checkbox-small" %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block mt-3 mb-1" %>
      </div>
    <%end%>
    <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class:"h8 sign-in-link"%>
    <hr>
    	<p>
        <a href="" class="btn btn-block btn-outline-danger disabled"> <i class="fab fa-google"></i>　Googleアカウントでログイン</a>
      </p>
  </div>
</div>