<div class="card devise-box card-bg">
  <div class="card-body">
    <div>
      <%= image_tag "logos/brand_logo_blue.png", class:"form-brand-image"%>
    </div>
    <h5 class="card-title mb-4 mt-1">パスワード変更</h5>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <% if @minimum_password_length %>
        <div class="text-right text-muted">
          <small class="fas fa-exclamation-circle"> パスワードの長さは最低 <%= @minimum_password_length %>文字です。</small>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", autofocus: true, class: "form-control text-muted", placeholder: "新しいパスワード" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "新しいパスワード再入力" %>
      </div>
      <div class="actions">
        <%= f.submit "変更する", class: "btn btn-primary btn-block mt-3 mb-1" %>
      </div>
    <% end %>
    <hr>
    	<p>
        <%= link_to "ログイン", new_session_path(resource_name), class:"btn btn-outline-primary" %>
        <%= link_to "新規登録", new_registration_path(resource_name), class:"btn btn-outline-primary ml-5" %>
      </p>
  </div>
</div>