<div class="map-box">
  <div id="mapdiv"></div>
</div>
<div class="dash-contnet row">
  <div class="col-md-3 px-1 mt-2">
    <div class="card-body">
      <div class="ml-4 mt-2">
        <p class="h5">旅行</p>
        <p class="ml-4 h6"><%= current_user.visited_countries.count %>ヶ国
        <span class="h8 text-muted">(<%= Country.all.count %>国)</span></p>
        <hr>
        <p class="h5">フォロワー</p>
        <p class="ml-4 h6"><%= current_user.passive_relationships.count %>
        <span class="h8 text-muted">人</span></p>
        <hr>
        <p class="h5">フォロ中</p>
        <p class="ml-4 h6"><%= current_user.active_relationships.count %>
        <span class="h8 text-muted">人</span></p>
      </div>
    </div>
  </div>
  <div class="col-md-9 px-1 mt-2">
    <div class="card-body">
      <p class="h4">
        Upcoming Trips
        <span class="h7 ml-1">
          <%=link_to 'see more...', user_path(current_user)%>
        </span>
      </p>
      <% if @trips.length == 0 %>
        <p class="card-body h6">
          次の旅行、どこに行きたいですか。
          <%= link_to "探索する", trips_path, class:"btn btn-sm btn-outline-primary ml-2" %>
        </p>
      <% else %>
        <div class="card-body row">
          <% @trips.each do |trip| %>
            <div class="col-12 col-sm-6 col-md-4">
              <%= link_to trip_schedules_path(trip), class: "trip-link" do %>
                <div style="background-image: url(<%=trip.trip_image%>);" class="image-grid-box">
                  <div class="image-overlay"></div>
                  <div class="image-grid-text">
                    <p class="h4 mb-2"><%= trip.destination_countries.first.name %></p>
                    <p class="h5 mb-2"><%= trip.name %></p>
                    <p class="h6 mb-2"><%= trip.start_day %> ( <%= trip_duration(trip) %> 日間)</p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(document).ready(initialize_world_map)
</script>

<script src="https://www.amcharts.com/lib/3/ammap.js" type="text/javascript"></script>
<script src="https://www.amcharts.com/lib/3/maps/js/worldHigh.js" type="text/javascript"></script>
<script src="https://www.amcharts.com/lib/3/themes/dark.js" type="text/javascript"></script>
<script src="https://www.amcharts.com/lib/3/themes/light.js" type="text/javascript"></script>
