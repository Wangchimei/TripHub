<h1>Trips#show</h1>
  <p><%= @trip.name %>
  <%= @trip.description %>
  <%= @trip.start_day %> to <%= @trip.end_day %>
  <%= trip_duration %> 日 </p>

  <% @trip.dailies.each do |daily| %>
    <p>
    <%= daily.date %>
    <%= link_to 'Edit', edit_trip_daily_path(@trip, daily) %>
    <%= daily.start_time.strftime("%R") %>
    <%= daily.end_time.strftime("%R") %>
    </p>
  <%end%>

<% @trips.each do |trip| %>
  <p><%= trip.name %>
  <%= trip.description %>
  <%= trip.start_day %> to <%= trip.end_day %>
  <%= (trip.end_day-trip.start_day).to_i + 1 %> 日
  <%= link_to 'Details', trip_path(trip)%>
  <%= link_to 'Edit', edit_trip_path(trip)%>
  <%= link_to 'Delete', trip_path(trip), method: :delete, data: {confirm: "削除しますか？"}%>
  </p>
<%end%>